#board_new
  .bg
    .container
      .col-md-4.col-md-offset-4
        .content
          = simple_form_for @board, html: { multipart: true } do |f|
            .from-group
              = f.input :name, label: "名前", placeholder: "例 : 「行きたい場所」「レシピ集」", input_html: { class: 'form-control'}
            =f.button :submit, class: "btn btn-primary"
